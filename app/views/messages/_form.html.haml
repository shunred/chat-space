%div.chat-main__input
  %div.chat-main__input-area
    = form_for [@group, @message] do |f|
      = f.text_field :body, class: 'chat-main__input-form-box', placeholder: 'Type a message'
      = f.label :image, class: 'upload-label' do
        %i.far.fa-image
        = f.file_field :image, class: 'hidden'
      = f.submit 'Send', class: 'chat-main__input-form-button'
